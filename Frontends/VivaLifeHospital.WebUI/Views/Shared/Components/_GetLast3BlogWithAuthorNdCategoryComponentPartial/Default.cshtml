@model List<ResultBlogDto>
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Blog Yazıları</h5>
            <h1 class="display-4">Son Eklenen Bloglar</h1>
        </div>
        <div class="row g-5">
            @foreach(var item in Model)
            {
                <div class="col-xl-4 col-lg-6">
                    <div class="bg-light rounded overflow-hidden">
                        <img class="img-fluid w-100" href="/blog/blogdetail/@item.BlogId" src="@item.BlogImgUrl" alt="">
                        <div class="p-4">
                            <a class="h3 d-block mb-3" href="/blog/blogdetail/@item.BlogId">@item.Title</a>
                            <p href="/blog/blogdetail/@item.BlogId" class="m-0">
                                @item.Description
                            </p>
                        </div>
                        <div class="d-flex justify-content-between border-top p-4">
                            <div class="d-flex align-items-center">
                                <img class="rounded-circle me-2" src="@item.AuthorImg" width="25" height="25" alt="">
                                <small>@item.AuthorName</small>
                            </div>
                            <div class="d-flex align-items-center">
                                <small class="ms-3"><i class="far fa-eye text-primary me-1"></i>12345</small>
                                <small class="ms-3"><i class="far fa-comment text-primary me-1"></i>123</small>
                            </div>
                        </div>
                    </div>
                </div>

            }
          
        </div>
    </div>
</div>
