@model List<ResultBannerDto>

<div class="container-fluid bg-primary py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row justify-content-start">
            @foreach(var item in Model)
            {
                <div class="col-lg-8 text-center text-lg-start">
                    <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5" style="border-color: rgba(256, 256, 256, .3) !important;">@item.Title</h5>
                    <h1 class="display-1 text-white mb-md-4">@item.Description</h1>
                    <div class="pt-2">
                        <a href="/doktor-bul" class="btn btn-light rounded-pill py-md-3 px-md-5 mx-2">Doktor Bul</a>
                        <a href="/Appointment/Index" class="btn btn-outline-light rounded-pill py-md-3 px-md-5 mx-2">Randevu Al</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
