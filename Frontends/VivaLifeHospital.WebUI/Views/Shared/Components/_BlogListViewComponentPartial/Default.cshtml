@model List<ResultBlogDto>
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5" style="max-width: 500px;">
            <h5 class="d-inline-block text-primary text-uppercase border-bottom border-5">Blog</h5>
            <h1 class="display-4">Blog Yazılarımızı İnceleyin</h1>

        </div>
        <div class="row g-5">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-lg-6">
                    <div class="bg-light rounded overflow-hidden">
                        <img class="img-fluid w-100" src="@item.BlogImgUrl" alt="">
                        <div class="p-4">
                            <a class="h3 d-block mb-3" href="/blog/blogdetail/@item.BlogId">@item.Title</a>
                           
                                @if (item.Description.Length > 150)
                                {
                                <p class="m-0"> @item.Description.Substring(0,150) ...</p>
                                    
                                }else
                                {
                                 <p class="m-0"> @item.Description</p>
                                }
                              
                            
                          @*   <a class="btn btn-success" href="/blog/blogdetail/@item.BlogId">Devamını oku</a> *@
                        </div>
                        <div class="d-flex justify-content-between border-top p-4">
                            <div class="d-flex align-items-center">
                                <img class="rounded-circle me-2" src="@item.AuthorImg" width="25" height="25" alt="">
                                <small>@item.AuthorName</small>
                                <small class="ms-2" > / Yazar</small>
                            </div>
                            <div class="d-flex align-items-center">
                            </div>
                        </div>
                    </div>
                </div>
               
            }
        </div>
    </div>
</div>
